.models-page
  min-height calc(100vh - var(--header-height))
  background-color #FAFAFA

  &__loading
    width 100%
    height 100%
    display flex
    align-items center
    justify-content center
    min-height calc(100vh - var(--header-height))

  &__link
    color #000
    display block
    display flex
    text-decoration none

    &:hover
      color #000

  &__pages
    bottom 0
    width 100%
    position sticky
    display flex
    padding 10px 40px
    justify-content flex-end
    box-sizing border-box
    background-color #fafafa
